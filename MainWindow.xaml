<Window x:Class="Timelines.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ToolBarPanel Grid.Row="0" HorizontalAlignment="Stretch" Height="30" Margin="0" VerticalAlignment="Top">
            <WrapPanel>
                <Button Content="New"  Width="40" HorizontalAlignment="Left" Margin="5"/>
                <Button Content="Del"  Width="40" HorizontalAlignment="Left" Margin="5"/>
            </WrapPanel>
        </ToolBarPanel>
        <StackPanel Grid.Row="1" Name="timelinesPanel">

        </StackPanel>
    </Grid>
</Window>
